.slide{
    .item{
        position: relative;
        font-family: "Apercu Pro";
        .slide__infor{
            position:absolute;
            max-width: 100%;
            .slide__infor-sale{
                color: #b49968;
                font-weight: 500;
                text-transform: uppercase;
                font-family: "Apercu Pro";
            }
            .slide__infor-heading{
                color: #2c2c2c;
                font-weight: 500;
                text-transform: capitalize;
                font-family: "Apercu Pro";
            }
            .slide__infor__price{
                .slide__infor__price-old{
                    font-size: 27px;
                    letter-spacing: 0px;
                    line-height: 32px;
                    text-decoration: line-through;
                    color: #9a9a9a;
                }
                .slide__infor__price-new{
                    font-size: 30px;
                    letter-spacing: 0.5px;
                    line-height: 32px;
                    color: #2c2c2c;
                    font-weight: bold;             
                }
            }
            button{
                color: #0d0d12;
                font-weight: 500;
                text-align: center;
                text-transform: uppercase;
                border:1px solid #B49968;
                background-color: unset;
                transition: all 0.3s;
            }
            button:hover{
                color: #fff;
                background-color: #B49968;
            }
        }
    }

}

.service{
    .owl-item{
        
    }

    .service__item{
        border: 1px solid #ebeeee;
        .service__item-icon{
            font-size: 45px;
            color: #b39967;
            .theme-iconscooter{
                font-size: 57px;
            }
        }
        .service__item__infor{
            .service__item__infor-heading{
                line-height: 20px;
                color: #2c2c2c;
                font-family: "Apercu Pro";
            }
            .service__item__infor-description{
                font-size: 16px;
                letter-spacing: 0px;
                line-height: 24px;
                color: #707070;
            }
        }
    }
    .owl-nav{  
        margin: 33px 0 0 0px;
        button{
            border: 1px solid #b49968;
            background-color: unset;
            padding: 10px 16px;
            i{
                -webkit-text-stroke: 1px #fff;
            }
        }
        button:focus{
            outline: none;
        }
        button:hover{
            background-color: #b49968;
            color: #fff;
            i{
                -webkit-text-stroke: 1px #b49968;
            }
        }
        button.owl-prev{
            border-right: none;
        }
    }
}

.category__item.slick-slide.slick-active{
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    min-height: 370px;
    flex-direction: column;
}
#category-slide .slick-prev{
    left: 7px ;
    z-index: 1;

}
#category-slide .slick-prev:before{
    content: "\f053";
    font-family: 'FontAwesome';
}
#category-slide .slick-next{
    right: 35px;
    z-index: 1;
}
#category-slide .slick-next:before{
    content: "\f054";
    font-family: 'FontAwesome';
}
.category-title{
    .category-title--heading{
        font-size: 40px;
        letter-spacing: 0px;
        line-height: 42px;
        color: #2c2c2c;
        font-weight: 500;
        font-family: "Apercu Pro";
        text-align: center;
        text-transform: capitalize;
    }
    .category-title--sub{
        font-size: 16px;
        line-height: 22px;
        color: #707070;
        font-family: "Apercu Pro";
        text-align: center;
    }
}

.slick-track{
    display: flex!important;
    .category__item:hover{
        border: 1px solid #b49968;
        img{
            transform: scale(1.1);
            transition: all 0.7s;
        }
    }
    .category__item{
        border: 1px solid #ebeeee;
        position: relative;
        .category__item--img{
            display: flex;
            justify-content: space-evenly;
            position: absolute;
            margin: -81px 0 0 0;
        }
        .category__item__infor{
            text-align: center;
            position: absolute;
            .category__item__infor--heading{
                color: #2c2c2c;
                font-weight: 500;
                text-transform: capitalize;
                font-family: "Apercu Pro";
            }
            .category__item__infor--btn{
                color: #b49968;
                font-weight: 500;
                font-family: "Apercu Pro";
                text-transform: uppercase;
                background-color: unset;
                border: none;
                text-decoration: underline;
            }
        }
    }
}

